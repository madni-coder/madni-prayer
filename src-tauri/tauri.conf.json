{
    "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
    "productName": "prayer",
    "version": "0.1.0",
    "identifier": "com.prayer.dev",
    "build": {
        "frontendDist": "../out",
        "devUrl": "https://madni-prayer.vercel.app/",
        "beforeDevCommand": "npm run dev",
        "beforeBuildCommand": "npm run build:tauri"
    },
    "app": {
        "windows": [
            {
                "title": "prayer-times",
                "width": 300,
                "height": 600,
                "resizable": true,
                "fullscreen": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    }
}
