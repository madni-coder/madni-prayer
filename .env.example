# Public (exposed to browser)
NEXT_PUBLIC_SUPABASE_URL=<your-supabase-url>
NEXT_PUBLIC_SUPABASE_ANON_KEY=<your-supabase-anon-key>

# Server-side only
SUPABASE_SERVICE_ROLE_KEY=<your-supabase-service-role-key>

# Database (Supabase)
# Use pooled host (port 6543) with pgbouncer flag for runtime connections
DATABASE_URL=postgresql://<user>:<password>@<pooled-host>:6543/<db>?pgbouncer=true
# Optional flags if needed:
# DATABASE_URL=postgresql://<user>:<password>@<pooled-host>:6543/<db>?pgbouncer=true&connection_limit=1&sslmode=require

# Direct connection (for migrations / introspection)
DATABASE_DIRECT_URL=postgresql://<user>:<password>@<direct-host>:5432/<db>
# Optional:
# DATABASE_DIRECT_URL=postgresql://<user>:<password>@<direct-host>:5432/<db>?sslmode=require

# Local development (uncomment to use local Postgres instead of Supabase)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mydb
# DATABASE_DIRECT_URL=postgresql://postgres:postgres@localhost:5432/mydb
